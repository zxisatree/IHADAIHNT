{
  "manifest_version": 2,
  "name": "IHADAIHNT",
  "description": "Work timer that saves your current session",
  "version": "1",
  "icons": {
    "64": "icons/icon.png"
  },
  "background": {
    "scripts": [
      "background_script.js"
    ]
  },
  "content_scripts": [
    {
      "matches": [
        "*://*.mozilla.org/*"
      ],
      "js": [
        "content_script.js"
      ]
    }
  ],
  "browser_action": {
    "default_icon": {
      "64": "icons/icon.png"
    },
    "default_popup": "browserAction/index.html",
    "default_title": "IHADAIHNT"
  },
  "options_ui": {
    "page": "options/index.html"
  },
  "permissions": [
    "tabs",
    "storage"
  ]
}